datasource db {
  provider = "sqlite"
  url = env("TURSO_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

model Unit {
  id    Int      @id @default(autoincrement())
  city  String
  state String
  Reboilers Reboiler[]
}

model Reboiler {
  id     Int    @id @default(autoincrement())
  number Int
  unit   Unit   @relation(fields: [unit_id], references: [id])
  unit_id Int
  TubeStates  TubeState[]
  Orders Order[]
}

model Robot {
  id               Int     @id @default(autoincrement())
  nickname String
  Orders Order[]
}

model Image {
  id       Int       @id @default(autoincrement())
  image    String
  taken_at Int
  TubeStates TubeState[]
}

model Examination {
  id           Int      @id @default(autoincrement())
  step        String
  started_at   Int
  finished_at  Int
  order_id     Int
  TubeStates   TubeState[]
}

model Order{
  id           Int      @id @default(autoincrement())
  status       String
  robot        Robot    @relation(fields: [robot_id], references: [id])
  robot_id     Int
  reboiler     Reboiler @relation(fields: [reboiler_id], references: [id])
  reboiler_id  Int
  started_at   Int
  finished_at  Int
}

model TubeState {
  id        Int        @id @default(autoincrement())
  dirtness  Int
  image     Image      @relation(fields: [image_id], references: [id])
  image_id   Int
  examination   Examination @relation(fields: [examination_id], references: [id])
  examination_id Int
}
